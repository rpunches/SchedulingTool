    <link href="https://fonts.googleapis.com/css?family=Noto+Serif:700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/main.css" />
    <noscript><link rel="stylesheet" href="~/Content/css/noscript.css" /></noscript>
    <link href="~/Content/css/CustomStyle.css" rel="stylesheet" />
</head>
<body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Header -->
        <header id="header">
            <div class="inner">

                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <span class="symbol"><i class="fas fa-graduation-cap"></i></span><span class="title">S.A.T.</span>
                </a>
                    <h1>
                        Scheduling Administrative Tool
                    </h1>
                

                <!-- Nav -->
                <nav>
                    <ul>
                        <li><a href="#menu">Menu</a></li>
                    </ul>
                </nav>

            </div>
        </header>

        <!-- Menu -->
        <nav id="menu">
            <h2>Menu</h2>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li>
                    @Html.Partial("_LoginPartial")
                </li>
                <li><a href="@Url.Action("Index", "Students")">Students</a></li>
                <li><a href="@Url.Action("Index", "Enrollments")">Enrollment</a></li>
                <li><a href="@Url.Action("Index", "Courses")">Courses</a></li>
                <li><a href="@Url.Action("Index", "ScheduledClasses")">Scheduled Classes</a></li>
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <span class="opener">Admin Functions</span>
                        <ul>
                            <li><a href="@Url.Action("Index", "UsersAdmin")">User's Admin</a></li>
                            <li><a href="@Url.Action("Index", "RolesAdmin")">Role's Admin</a></li>
                            <li><a href="@Url.Action("Index", "StudentStatus")">Student Status</a></li>
                        </ul>
                    </li>
                }
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>

            </ul>
        </nav>

        <!-- Main -->
        <div class="main">
            <div class="inner">
                @RenderBody()
            </div>
        </div>



        <!-- Footer -->
        <footer id="footer">
            <div class="inner">
