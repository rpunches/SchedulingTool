@model SAT.DATA.EF.Student

@{
    ViewBag.Title = Model.FirstName + " " + Model.LastName;
}



<div id="stContainer">

    <div class="row">
        <div id="stImg" class="col-md-3 col-md-offset-1 col-sm-6 d-flex justify-content-center">
            @*@Html.DisplayNameFor(model => model.PhotoUrl)*@
            <h2>@ViewBag.Title</h2>
            <img src="~/Content/images/@Model.PhotoUrl" alt="@Model.FullName" />

            @*@Html.DisplayFor(model => model.PhotoUrl)*@
        </div>
        <div class="col">
            @*<p>
               @Html.DisplayNameFor(model => model.FullName)
                @Html.DisplayFor(model => model.FullName)
            </p>*@

            <p>
                <strong>  @Html.DisplayNameFor(model => model.Major): </strong><br />
                @Html.DisplayFor(model => model.Major)
            </p>

            <p>
                <strong>    @Html.DisplayNameFor(model => model.Address): </strong><br />
                @Html.DisplayFor(model => model.FullAddress)
                @*@Html.DisplayFor(model => model.City)
                @Html.DisplayFor(model => model.State)
                @Html.DisplayFor(model => model.ZipCode)*@
            </p>
            <p>
                <strong>  @Html.DisplayNameFor(model => model.Phone):</strong> <br />
                @Html.DisplayFor(model => model.Phone)
            </p>
            <p>
                <strong>  @Html.DisplayNameFor(model => model.Email):</strong> <br /> 
                @Html.DisplayFor(model => model.Email)
            </p>
            <p style="font-style:italic">
                @*@Html.DisplayNameFor(model => model.StudentStatus.SSName)*@
                @Html.DisplayFor(model => model.StudentStatus.SSName)
            </p>
        </div>
    </div>
</div>
<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.StudentId })
        @:|
    }

    @Html.ActionLink("Back to Students", "Index")
</p>
